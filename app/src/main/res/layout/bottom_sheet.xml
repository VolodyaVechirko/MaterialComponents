            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="?attr/actionBarSize"-->
            <!--android:background="?attr/colorPrimary"-->
            <!--app:navigationIcon="@drawable/ic_close_black_24dp"-->
            <!--app:title="Chose item" />-->

    <!--</com.google.android.material.appbar.AppBarLayout>-->

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/BottomSheetItem"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bottomSheetItemHeight"
                android:drawableStart="@drawable/ic_person_add_24dp"
                android:text="Add people" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/BottomSheetItem"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bottomSheetItemHeight"
                android:drawableStart="@drawable/ic_person_add_24dp"
                android:text="Copy link" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/BottomSheetItem"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bottomSheetItemHeight"
                android:drawableStart="@drawable/ic_person_add_24dp"
                android:text="Open in" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/BottomSheetItem"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bottomSheetItemHeight"
                android:drawableStart="@drawable/ic_person_add_24dp"
                android:text="Send a copy" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/BottomSheetItem"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bottomSheetItemHeight"
                android:drawableStart="@drawable/ic_person_add_24dp"
                android:text="Make a copy" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/BottomSheetItem"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bottomSheetItemHeight"
                android:drawableStart="@drawable/ic_person_add_24dp"
                android:text="Move" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/BottomSheetItem"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bottomSheetItemHeight"
                android:drawableStart="@drawable/ic_person_add_24dp"
                android:text="Available offline" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/BottomSheetItem"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bottomSheetItemHeight"
                android:drawableStart="@drawable/ic_person_add_24dp"
                android:text="Star" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/BottomSheetItem"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bottomSheetItemHeight"
                android:drawableStart="@drawable/ic_person_add_24dp"
                android:text="Rename" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/BottomSheetItem"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bottomSheetItemHeight"
                android:drawableStart="@drawable/ic_person_add_24dp"
                android:text="Remove" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/BottomSheetItem"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bottomSheetItemHeight"
                android:drawableStart="@drawable/ic_person_add_24dp"
                android:text="Exit" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>